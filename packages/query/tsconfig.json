{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}